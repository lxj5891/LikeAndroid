<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView android:id="@+id/foodImage"
        android:layout_width="150px"
        android:layout_height="150px"
        android:layout_margin="5dp"/>

    <LinearLayout android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView android:id="@+id/foodTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22dp"/>
        <TextView android:id="@+id/foodInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13dp"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="right">
        <Button android:id="@+id/minusButton"
            android:text="-"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            style="?android:attr/borderlessButtonStyle"/>
        <EditText android:id="@+id/foodTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:inputType="number"
            android:numeric="integer"/>
        <Button android:id="@+id/plusButton"
            android:text="+"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            style="?android:attr/borderlessButtonStyle"/>
        <Button android:id="@+id/addFoodButton"
            android:text="点菜"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>